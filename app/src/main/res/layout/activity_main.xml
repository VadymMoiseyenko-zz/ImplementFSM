<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.redcross.implementfsm.controller.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/alarm_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/alarmDisarmed"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/alarm_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/alarmDisarmed"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_lock"
            android:onClick="action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LOCK"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_unlock"
            android:onClick="action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="UNLOCK"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_lock_x_2"
            android:onClick="action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LOCK x 2"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_unlock_x_2"
            android:onClick="action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="UNLOCK x 2"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>
